{
  "name": "segebre-dev",
  "author": "Juan Enrique Segebre Zaghmout",
  "license": "GPL-3.0-only",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev -p ${HTTP_PORT:-3000}",
    "build": "next build",
    "build:clean": "rm -rf .next/",
    "start": "next start -p ${HTTP_PORT:-3000}",
    "generate-css-types": "tcm -p '**/*.module.css' src && yarn format",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "stylelint": "stylelint 'src/**/*.css' --fix",
    "lint": "eslint --fix . --ext ts --ext tsx --ext js",
    "test": "jest",
    "normalize": "yarn generate-css-types && yarn type-check && yarn stylelint && yarn lint && yarn test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.css": [
      "yarn stylelint"
    ],
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "clsx": "2.1.0",
    "next": "14.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@mdx-js/loader": "3.0.0",
    "@next/mdx": "14.1.0",
    "@svgr/webpack": "8.1.0",
    "@testing-library/jest-dom": "6.1.5",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.1",
    "@types/jest": "29.5.11",
    "@types/mdx": "2.0.10",
    "@types/node": "20.10.3",
    "@types/react": "18.2.42",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "eslint": "8.55.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-project-structure": "1.4.7",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-testing-library": "6.2.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.2.0",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-nesting": "12.0.1",
    "postcss-preset-env": "9.3.0",
    "prettier": "3.1.0",
    "react-html-props": "2.0.3",
    "stylelint": "16.0.2",
    "stylelint-config-recess-order": "4.4.0",
    "stylelint-config-standard": "35.0.0",
    "ts-node": "10.9.1",
    "typed-css-modules": "0.8.1",
    "typescript": "5.3.3"
  }
}
