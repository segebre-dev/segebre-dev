{
  "extends": ["stylelint-config-standard", "stylelint-config-recess-order"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["value"]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["composes"]
      }
    ],
    "value-keyword-case": [
      "lower",
      {
        "ignoreProperties": ["composes"]
      }
    ],
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
    "declaration-property-value-allowed-list": [
      {
        "/color$/": "/var\\(--color/"
      },
      {
        "message": "Property '%s' has unexpected value '%s': value must be a valid variable from the design system."
      }
    ]
  }
}
